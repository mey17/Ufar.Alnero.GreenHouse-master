@page "/technical-description"
@attribute [StreamRendering]



<PageTitle>Technical Description</PageTitle>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Technical Description - Alnero</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            text-align: center;
        }

        h1 {
            font-size: 3rem;
            color: #007bff;
            margin-bottom: 30px;
        }

        p {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        .form-group {
            margin-bottom: 20px;
        }

        input.form-control {
            height: 20;
            width: 20;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-size: 1.2rem;
            padding: 10px 30px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1>Technical Description</h1>
        <p>Customize your smart greenhouse system by selecting sensor components and providing greenhouse size.</p>
        <form>
            <div class="form-group">
                <div style="display: flex; flex-direction: column; align-items: flex-start;">
                    <label for="greenhouseSize">Greenhouse Size (in square meters)</label>
                    <input  min="5" max="5000" type="number" style="width: 200px;" class="form-control" id="greenhouseSize" placeholder="Enter greenhouse size">
                </div>



            </div>

            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price ($)</th>
                        <th>Select</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><img src="/temperature-sensor.jpg" alt="Temperature Sensor" width="100"></td>
                        <td>Temperature Sensor</td>
                        <td>Monitors temperature inside the greenhouse.</td>
                        <td>50</td>
                        <td><input type="checkbox"  name="sensors" value="temperature"></td>
                    </tr>
                    <!-- Add more sensor rows here -->
                </tbody>
            </table>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>

